<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Problem Interface</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">Math Auth System</a>
    </nav>

    <!-- Problem Interface Section -->
    <section class="section section-light">
        <div class="container">
            <h1 class="display-4">Interface de Problemas</h1>
            <form action="/api/problems" method="POST" class="mt-4">
                <div class="form-group">
                    <label for="title">Título:</label>
                    <input type="text" id="title" name="title" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="description">Descrição:</label>
                    <textarea id="description" name="description" class="form-control" required></textarea>
                </div>
                <div class="form-group">
                    <label for="difficulty">Dificuldade:</label>
                    <select id="difficulty" name="difficulty" class="form-control" required>
                        <option value="easy">Fácil</option>
                        <option value="medium">Médio</option>
                        <option value="hard">Difícil</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="solution">Solução:</label>
                    <textarea id="solution" name="solution" class="form-control" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-lg">Criar Problema</button>
            </form>
            <h2 class="mt-5">Problemas Existentes</h2>
            <ul>
                <% for (let problem of problems) { %>
                    <li><%= problem.title %> - <%= problem.difficulty %></li>
                <% } %>
            </ul>
        </div>
    </section>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
